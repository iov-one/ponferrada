{
  "name": "bierzo-wallet",
  "version": "1.3.7",
  "private": true,
  "dependencies": {
    "@cosmwasm/bcp": "^0.7.7",
    "@fortawesome/fontawesome-svg-core": "^1.2.21",
    "@fortawesome/free-regular-svg-icons": "^5.10.1",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@iov/bcp": "^2.2.0",
    "@iov/encoding": "^2.2.0",
    "@iov/ethereum": "^2.2.5",
    "@iov/faucets": "^2.2.5",
    "@iov/jsonrpc": "^2.2.0",
    "@iov/ledger-bns": "^0.14.2",
    "@ledgerhq/hw-transport-webusb": "^4.69.0",
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/styles": "^4.5.0",
    "clipboard-copy": "^3.1.0",
    "concurrently": "^4.1.0",
    "file-saver": "^2.0.2",
    "final-form": "^4.18.2",
    "medulas-react-components": "^1.3.7",
    "normalize.css": "^8.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-final-form-hooks": "^2.0.1",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "regenerator-runtime": "^0.13.3",
    "ui-logic": "^1.3.7"
  },
  "devDependencies": {
    "@types/clipboardy": "^2.0.1",
    "@types/express": "^4.16.1",
    "@types/file-saver": "^2.0.1",
    "clipboardy": "^2.1.0",
    "react-scripts": "^3.3.0"
  },
  "scripts": {
    "use-extension-config-development": "cd ../sanes-browser-extension && yarn use-config-development && yarn override-config-development && cd ../bierzo-wallet",
    "override-config-development": "mkdir -p ./build/config && cp ./src/config/development.json ./build/config/conf.json",
    "override-config-staging": "mkdir -p ./build/config && cp ./src/config/staging.json ./build/config/conf.json",
    "override-config-production": "mkdir -p ./build/config && cp ./src/config/production.json ./build/config/conf.json",
    "lint": "eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "lint-fix": "eslint -c .eslintrc.js 'src/**/*.ts{,x}' --fix",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "start-development": "react-scripts start",
    "start-staging": "yarn override-config-staging && docker build --no-cache -t 'iov1/bierzo-wallet:manual' . && docker run --read-only --rm -p 3000:3000 'iov1/bierzo-wallet:manual'",
    "start": "yarn start-development",
    "build-development": "yarn react-scripts build && yarn override-config-development",
    "build-staging": "react-scripts build && yarn override-config-staging",
    "build-production": "react-scripts build && yarn override-config-production",
    "build": "yarn build-development",
    "dry-build": "tsc --noEmit",
    "test-dom": "CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-unit": "CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --detectOpenHandles",
    "test-e2e": "yarn override-config-development && yarn use-extension-config-development && CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --runInBand",
    "test-single": "yarn override-config-development && yarn use-extension-config-development && CI=true react-scripts test --env=jsdom --detectOpenHandles",
    "test": "yarn test-unit && yarn test-dom && yarn test-e2e",
    "deploy-staging": "cp firebase.wallet-staging.json firebase.json && firebase deploy --project iov-wallet --only hosting:iov-wallet-staging",
    "deploy-production": "cp firebase.wallet-production.json firebase.json && firebase deploy --project iov-wallet --only hosting:iov-wallet-production"
  },
  "browserslist": [
    ">0.2%",
    "chrome 45",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
