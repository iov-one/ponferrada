{
  "name": "sanes-chrome-extension",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "use-config-travis": "cp ./config/test.json ./build/assets/config/conf.json",
    "use-config-test": "cp ./config/test.json ./public/assets/config/conf.json",
    "use-config-development": "cp ./config/development.json ./public/assets/config/conf.json",
    "use-config-production": "cp ./config/production.json ./public/assets/config/conf.json",
    "build": "react-scripts build src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "export": "yarn use-config-production && yarn build && web-ext build --source-dir ./build/ --artifacts-dir ./exports --overwrite-dest",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "lint": "eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "start": "yarn use-config-test && react-scripts start src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "start:firefox:test": "yarn use-config-test && yarn build && web-ext run --source-dir ./build/",
    "start:firefox:development": "yarn use-config-development && yarn build && web-ext run --source-dir ./build/",
    "start:firefox:production": "yarn use-config-production && yarn build && web-ext run --source-dir ./build/",
    "test-dom": "yarn use-config-test && CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-e2e": "yarn use-config-test && CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --runInBand --env=jsdom",
    "test-unit": "yarn use-config-test && CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-single": "yarn use-config-test && CI=true react-scripts test --env=jsdom",
    "test": "yarn use-config-travis && yarn test-unit && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@iov/bns": "^0.13.7",
    "@iov/core": "^0.13.7",
    "@iov/crypto": "^0.13.7",
    "@iov/ethereum": "^0.13.7",
    "@iov/jsonrpc": "^0.13.7",
    "@iov/keycontrol": "^0.13.7",
    "@iov/lisk": "^0.13.7",
    "@types/history": "^4.7.2",
    "@types/jest": "24.0.6",
    "@types/jspdf": "^1.3.0",
    "@types/node": "11.9.4",
    "@types/random-js": "^1.0.31",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.1",
    "jspdf": "^1.5.3",
    "level-js": "^4.0.1",
    "medulas-react-components": "*",
    "memdown": "^4.0.0",
    "random-js": "^2.0.0-rc5",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^3.2.1"
  },
  "devDependencies": {
    "@types/levelup": "^3.1.0",
    "@types/memdown": "^3.0.0",
    "chrome-extension-react-scripts": "^0.2.0",
    "puppeteer": "^1.13.0"
  }
}
