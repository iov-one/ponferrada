{
  "name": "sanes-chrome-extension",
  "version": "0.1.7",
  "private": true,
  "scripts": {
    "use-config-development": "cp ./config/development.json ./public/assets/config/conf.json",
    "use-config-staging": "cp ./config/staging.json ./public/assets/config/conf.json",
    "use-config-production": "cp ./config/production.json ./public/assets/config/conf.json",
    "make-manifest-development": "cp ./config/manifest-development.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "make-manifest-staging": "cp ./config/manifest-staging.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "make-manifest-production": "cp ./config/manifest-production.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "build-with-any-config": "react-scripts build src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "build-development": "yarn use-config-development && yarn build-with-any-config && yarn make-manifest-development",
    "build-staging": "yarn use-config-staging && yarn build-with-any-config && yarn make-manifest-staging",
    "build-production": "yarn use-config-production && yarn build-with-any-config && yarn make-manifest-production",
    "build": "yarn build-development",
    "override-config-development": "cp ./config/development.json ./build/assets/config/conf.json && yarn make-manifest-development",
    "override-config-staging": "cp ./config/staging.json ./build/assets/config/conf.json && yarn make-manifest-staging",
    "override-config-production": "cp ./config/production.json ./build/assets/config/conf.json && yarn make-manifest-production",
    "export-staging": "yarn override-config-staging && web-ext build --source-dir ./build/ --artifacts-dir ./exports --overwrite-dest",
    "export-production": "yarn override-config-production && web-ext build --source-dir ./build/ --artifacts-dir ./exports --overwrite-dest",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "lint-fix": "eslint -c .eslintrc.js 'src/**/*.ts{,x}' --fix",
    "start": "yarn use-config-development && react-scripts start src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "start-firefox-development": "yarn build-development && web-ext run --source-dir ./build/",
    "start-firefox-staging": "yarn build-staging && web-ext run --source-dir ./build/",
    "start-firefox-production": "yarn build-production && web-ext run --source-dir ./build/",
    "test-dom": "yarn use-config-development && CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-e2e": "yarn use-config-development && CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --runInBand --env=jsdom",
    "test-unit": "yarn use-config-development && CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-single": "yarn use-config-development && CI=true react-scripts test --env=jsdom",
    "test": "yarn test-unit && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@iov/bns": "^0.16.0",
    "@iov/crypto": "^0.16.0",
    "@iov/encoding": "^0.16.0",
    "@iov/ethereum": "^0.16.0",
    "@iov/faucets": "^0.16.0",
    "@iov/jsonrpc": "^0.16.0",
    "@iov/keycontrol": "^0.16.0",
    "@iov/lisk": "^0.16.0",
    "@iov/multichain": "^0.16.0",
    "@material-ui/core": "^4.3.1",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.0",
    "@types/history": "^4.7.2",
    "@types/jspdf": "^1.3.0",
    "@types/random-js": "^1.0.31",
    "@types/react-router-dom": "^4.3.1",
    "clipboard-copy": "^3.0.0",
    "connected-react-router": "^6.4.0",
    "final-form": "^4.18.2",
    "jspdf": "^1.5.3",
    "level-js": "^4.0.1",
    "medulas-react-components": "^0.1.7",
    "memdown": "^4.0.0",
    "random-js": "^2.0.0-rc5",
    "react": "16.9.0-rc.0",
    "react-dom": "16.9.0-rc.0",
    "react-final-form-hooks": "^2.0.1",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^3.2.1"
  },
  "devDependencies": {
    "@iov/browser-extension-react-scripts": "^0.2.1",
    "@types/levelup": "^3.1.0",
    "@types/memdown": "^3.0.0",
    "puppeteer": "^1.13.0"
  }
}
