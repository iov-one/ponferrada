{
  "name": "sanes-browser-extension",
  "version": "1.3.0-e-alpha.3",
  "private": true,
  "scripts": {
    "set-version": "replace --quiet \"@VERSION@\" \"$npm_package_version\" build/js/main.js",
    "use-config-development": "cp ./config/development.json ./public/assets/config/conf.json",
    "use-config-staging": "cp ./config/staging.json ./public/assets/config/conf.json",
    "use-config-production": "cp ./config/production.json ./public/assets/config/conf.json",
    "make-manifest-development": "cp ./config/manifest-development.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "make-manifest-staging": "cp ./config/manifest-staging.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "make-manifest-production": "cp ./config/manifest-production.json ./build/manifest.json && ./scripts/set_manifest_version.sh",
    "build-with-any-config": "react-scripts build src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "build-development": "yarn use-config-development && yarn build-with-any-config && yarn make-manifest-development && yarn set-version",
    "build-staging": "yarn use-config-staging && yarn build-with-any-config && yarn make-manifest-staging && yarn set-version",
    "build-production": "yarn use-config-production && yarn build-with-any-config && yarn make-manifest-production && yarn set-version",
    "build": "yarn build-development",
    "dry-build": "tsc --noEmit",
    "override-config-development": "cp ./config/development.json ./build/assets/config/conf.json && yarn make-manifest-development",
    "override-config-staging": "cp ./config/staging.json ./build/assets/config/conf.json && yarn make-manifest-staging",
    "override-config-production": "cp ./config/production.json ./build/assets/config/conf.json && yarn make-manifest-production",
    "export-staging": "yarn override-config-staging && web-ext build --source-dir ./build/ --artifacts-dir ./exports/staging --overwrite-dest",
    "export-production": "yarn override-config-production && web-ext build --source-dir ./build/ --artifacts-dir ./exports/production --overwrite-dest",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "lint": "eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "lint-fix": "eslint -c .eslintrc.js 'src/**/*.ts{,x}' --fix",
    "start": "yarn use-config-development && react-scripts start src/extension/contentscript.ts src/extension/backgroundscript.ts",
    "start-firefox-development": "yarn build-development && web-ext run --source-dir ./build/",
    "start-firefox-staging": "yarn build-staging && web-ext run --source-dir ./build/",
    "start-firefox-production": "yarn build-production && web-ext run --source-dir ./build/",
    "test-dom": "yarn use-config-development && TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-e2e": "yarn use-config-development && TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --runInBand --env=jsdom",
    "test-unit": "yarn use-config-development && TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-single": "yarn use-config-development && TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test --env=jsdom",
    "test": "yarn test-unit && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "chrome 45",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@iov/bns": "^2.2.5",
    "@iov/crypto": "^2.2.0",
    "@iov/encoding": "^2.2.0",
    "@iov/ethereum": "^2.2.5",
    "@iov/faucets": "^2.2.5",
    "@iov/jsonrpc": "^2.2.0",
    "@iov/keycontrol": "^2.2.0",
    "@iov/lisk": "^2.2.0",
    "@iov/multichain": "^2.2.5",
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/styles": "^4.5.0",
    "@types/history": "^4.7.2",
    "@types/jspdf": "^1.3.0",
    "@types/random-js": "^1.0.31",
    "@types/react-router-dom": "^4.3.1",
    "clipboard-copy": "^3.0.0",
    "final-form": "^4.18.2",
    "jspdf": "^1.5.3",
    "level-js": "^4.0.1",
    "levelup": "^4.1.0",
    "medulas-react-components": "^1.3.0-alpha.3",
    "memdown": "^5.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-final-form-hooks": "^2.0.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "replace": "^1.1.1",
    "typesafe-actions": "^3.2.1",
    "ui-logic": "^1.3.0-alpha.3"
  },
  "devDependencies": {
    "@iov/browser-extension-react-scripts": "^3.3.0",
    "@types/levelup": "^3.1.0",
    "@types/memdown": "^3.0.0",
    "clipboardy": "^2.1.0",
    "puppeteer": "^1.13.0"
  }
}
