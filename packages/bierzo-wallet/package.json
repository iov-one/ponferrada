{
  "name": "bierzo-wallet",
  "version": "0.0.4",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/free-regular-svg-icons": "^5.8.1",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@iov/bcp": "^0.16.0-alpha.4",
    "@iov/encoding": "^0.16.0-alpha.4",
    "@iov/ethereum": "^0.16.0-alpha.4",
    "@iov/faucets": "^0.16.0-alpha.4",
    "@iov/jsonrpc": "^0.16.0-alpha.4",
    "@material-ui/core": "4.0.2",
    "@material-ui/icons": "4.0.1",
    "@material-ui/styles": "4.0.2",
    "@sentry/browser": "^5.5.0",
    "concurrently": "^4.1.0",
    "file-saver": "^2.0.2",
    "final-form": "^4.12.0",
    "medulas-react-components": "^0.0.4",
    "normalize.css": "^8.0.1",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-final-form-hooks": "^2.0.0",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0",
    "redux": "^4.0.1",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/file-saver": "^2.0.1"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "start-development": "REACT_APP_CONFIG=development react-scripts start",
    "start-staging": "REACT_APP_CONFIG=staging react-scripts start",
    "start-production": "REACT_APP_CONFIG=production react-scripts start",
    "start": "yarn start-development",
    "build-development": "REACT_APP_CONFIG=development react-scripts build",
    "build-staging": "REACT_APP_CONFIG=staging react-scripts build",
    "build-production": "REACT_APP_CONFIG=production react-scripts build",
    "build": "yarn build-development",
    "test-dom": "REACT_APP_CONFIG=development CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-unit": "REACT_APP_CONFIG=development CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --detectOpenHandles",
    "test-e2e": "REACT_APP_CONFIG=development CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --runInBand",
    "test-single": "REACT_APP_CONFIG=development CI=true react-scripts test --env=jsdom --detectOpenHandles",
    "use-config-development": "cd ../sanes-chrome-extension && yarn use-config-development && yarn override-config-development && cd ../bierzo-wallet",
    "test": "yarn use-config-development && yarn test-unit && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
