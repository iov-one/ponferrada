{
  "name": "iov-ponferrada-root",
  "private": true,
  "description": "IOV Frontend packages",
  "homepage": "https://github.com/iov-one/ponferrada",
  "bugs": {
    "url": "https://github.com/iov-one/ponferrada/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/ponferrada.git"
  },
  "license": "Apache-2.0",
  "author": "IOV SAS <admin@iov.one>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build-storybook": "lerna run build-storybook --stream",
    "clean": "rm -rf ./packages/*/docs/",
    "docs": "lerna run docs",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "release": "lerna run build && lerna publish",
    "storybook": "lerna run storybook --stream",
    "test": "lerna run --concurrency 1 test --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.1.0-rc.5",
    "@storybook/addon-links": "^5.1.0-rc.5",
    "@storybook/addon-storyshots": "^5.1.0-rc.5",
    "@storybook/addon-viewport": "^5.1.0-rc.5",
    "@storybook/addons": "^5.1.0-rc.5",
    "@storybook/react": "^5.1.0-rc.5",
    "@types/chrome": "^0.0.82",
    "@types/classnames": "^2.2.7",
    "@types/jest": "24.0.14",
    "@types/material-ui": "^0.21.6",
    "@types/node": "12.0.8",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "7.1.0",
    "@types/react-test-renderer": "^16.8.1",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-storyshots": "^4.0.1",
    "@types/storybook__addon-viewport": "^4.1.1",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "history": "^4.7.2",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "typescript": "~3.5",
    "web-ext": "^3.0.0"
  },
  "resolutions": {
    "react": "16.9.0-rc.0",
    "react-dom": "16.9.0-rc.0"
  }
}
